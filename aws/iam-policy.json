{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "RDSManageAccess",
      "Effect": "Allow",
      "Action": [
        "rds:StartDBInstance",
        "rds:StopDBInstance",
        "rds:DescribeDBInstances"
      ],
      "Resource": "arn:aws:rds:ap-southeast-1:YOUR_ACCOUNT_ID:db:YOUR_INSTANCE_ID"
    },
    {
      "Sid": "CloudWatchMetricAccess",
      "Effect": "Allow",
      "Action": ["cloudwatch:GetMetricData", "cloudwatch:PutMetricAlarm"],
      "Resource": "*"
    }
  ]
}
